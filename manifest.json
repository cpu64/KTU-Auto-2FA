{
    "manifest_version": 3,
    "name": "KTU-Auto-2FA",
    "description": "Base Level Extension",
    "version": "1.0",
    "action": {
      "default_popup": "main.html"
    },
    "background": {
      "service_worker": "scripts/background.js"
    },
    "web_accessible_resources": [{
        "resources": ["libraries/JS-OTP/dist/jsOTP.js"],
        "matches": ["<all_urls>"]
    }],
    "content_scripts": [{
      "matches": ["*://*.login.ktu.lt/simplesaml/module.php/*", "*://uais.cr.ktu.lt/ktuis/stp_prisijungimas/*"],
      "js": ["scripts/contentScript.js"]
    }],
    "permissions": ["storage"],
    "host_permissions": ["*://*.login.ktu.lt/"]
  }
